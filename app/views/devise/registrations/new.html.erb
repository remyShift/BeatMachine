<div class="flex items-center justify-center mt-6">
  <div class="bg-greyy p-8 rounded-lg shadow-lg w-3/4 max-w-md border border-yelloww ">
    <h2 class="text-2xl font-bold text-center font-outfit text-yelloww">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="my-4 flex flex-col items-center gap-6">
        <%= f.input :username,
                    required: true,
                    autofocus: true,
                    wrapper_html: {class: "w-full"},
                    input_html: { autocomplete: "username",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                },
                    label_html: {
                                  class: "text-white font-outfit"
                                }%>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    wrapper_html: {class: "w-full"},
                    input_html: { autocomplete: "email",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                },
                   label_html: {
                                  class: "text-white font-outfit"
                               }%>
        <%= f.input :password,
                    required: true,
                    wrapper_html: {class: "w-full text-yelloww"},
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                },
                    label_html: {
                                   class: "text-white font-outfit"
                                } %>
        <%= f.input :password_confirmation,
                    required: true,
                    wrapper_html: {class: "w-full"},
                    input_html: { autocomplete: "new-password",
                                  class: "border border-slate-600 rounded-md p-2 flex flex-col gap-2 w-full focus:border-primary focus:outline-none",
                                },
                    label_html: {
                                  class: "text-white font-outfit"
                                } %>
          <%= f.input :profile_picture,
                    required: true,
                    wrapper_html: {class: "w-full p-4 text-yelloww"},
                    input_html: { autocomplete: "new-password",
                                  class: " p-2 flex flex-col gap-2  appearance-none",
                                },
                    label_html: {
                                  class: "text-white font-outfit"
                                } %>
      </div>

      <div class="my-4 flex flex-col items-center gap-2">
        <%= f.button :submit, "Sign up", class: "font-outfit border-2 border-yelloww bg-yelloww font-outfit font-semibold text-blackk rounded-md w-1/2 p-2 hover:bg-blackk hover:text-yelloww transform transition-transform duration-200 cursor-pointer" %>
      </div>
    <% end %>
    <div class="text-white my-4 flex flex-col items-center gap-2 hover:text-yelloww transform transition-transform duration-200 cursor-pointer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
